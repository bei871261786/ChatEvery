<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <river.chat.lib_core.view.roundview.EasyConstraintLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:ev_radius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="18dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="标题文字文字文字" />

        <TextView
            android:id="@+id/tv_dialog_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="14"
            android:maxLines="3"
            android:textColor="@color/color_999999"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_title"
            app:layout_goneMarginTop="20dp"
            tools:text="说明文字说明文字说明文字说明文字说明文字说明说明文字说明文字说明文字说明文字说明文字说明文字说明文字说明文字说明文字说明文字说明文字说明文字文字说明文字说明文字说明文字说明文字说明文字说明文字"
            tools:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_EEEEEE"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_desc" />

        <LinearLayout
            android:id="@+id/tv_dialog_buttons"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_desc">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_dialog_l_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="19"
                android:gravity="center"
                android:maxEms="16"
                android:textColor="@color/color_999999"
                android:textSize="18dp"
                android:visibility="gone"
                tools:text="知道"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_dialog_r_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_weight="19"
                android:gravity="center"
                android:textColor="#6448FF"
                android:textSize="18dp"
                android:visibility="gone"
                tools:text="知道"
                tools:visibility="visible" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/view_dialog_dividing"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/color_EEEEEE"
            app:layout_constraintBottom_toBottomOf="@id/tv_dialog_buttons"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_dialog_buttons" />

    </river.chat.lib_core.view.roundview.EasyConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

