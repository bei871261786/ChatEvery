<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="item"
            type="river.chat.lib_resource.model.MessageBean" />

        <variable
            name="handler"
            type="river.chat.businese_main.chat.ChatViewModel" />

    </data>
    <LinearLayout xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/conversation_item_content_left">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_avatar"
                style="@style/conversation_item_head_left"
                imageCircle="@{item.user.avatar}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <river.chat.lib_core.view.roundview.EasyButton
                android:id="@+id/tvMsg"
                style="@style/conversation_item_text"
                android:layout_marginLeft="11dp"
                android:background="@color/color_666666"
                android:text="@{item.msg}"
                android:textColor="@color/white"
                app:ev_radius="10dp"
                app:layout_constraintLeft_toRightOf="@id/iv_avatar"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                tool:text="å—¯" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>